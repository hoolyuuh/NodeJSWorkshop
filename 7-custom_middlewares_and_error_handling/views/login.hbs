    .container {
        margin-top: 4rem;
        width: 50%;
        padding: 1.5rem;
        border-radius: 0.5rem;
    }
    .submit {
        width: 100px;
        margin-left: calc(100% - 100px);
    }
    h1 {
        margin-bottom: 0.5rem;
    }
